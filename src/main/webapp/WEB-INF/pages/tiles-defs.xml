<!--
layout dir:
/WEB-INF/pages/layout/*.jsp
page dir:
/WEB-INF/pages/*.jsp
-->

<tiles-definitions>
    
    <!--jednotlive stranky rozsirene z layout/tiles-defs.xml-->
    <definition name="home" extends="pms.base">
        <put-attribute name="title" value="Admin Home Title"/>
        <put-attribute name="content" value="/WEB-INF/pages/home.jsp"/>
    </definition>
    
    <definition name="roleList" extends="pms.base">
        <put-attribute name="title" value="Výpis rolí"/>
        <put-attribute name="content" value="/WEB-INF/pages/roleList.jsp"/>
    </definition>
    
    <definition name="userForm" extends="pms.base">
        <put-attribute name="title" value="Editace uživatele"/>
        <put-attribute name="content" value="/WEB-INF/pages/userForm.jsp"/>
    </definition>
    
    
    <definition name="loginout" template="/WEB-INF/pages/loginout.jsp">
        <put-attribute name="title" value="Login Page"/>
    </definition>
    
</tiles-definitions>